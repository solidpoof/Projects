contract SwapContract is Ownable{
    using SafeMath for uint256;

    address constant public BUSD = address(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);
    address public LOP;
    IUniswapV2Router02 public uniswapV2Router;
    address public marketingWallet;

    constructor(address _marketingWallet) 
    {

        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        uniswapV2Router = _uniswapV2Router;
        marketingWallet = address(_marketingWallet);

    }

    function setLOPAddress(address _token) public onlyOwner{
        LOP = _token;
    }

    function updateMarketingWallet(address _newWallet) public onlyOwner{
        marketingWallet = _newWallet;
    }        

    function addLiquidity(uint256 tokenAmount, uint256 BUSDAmount) private {
        require(LOP != address(0x0), "LOP address not set");
        // approve token transfer to cover all possible scenarios
        IERC20(LOP).approve(address(uniswapV2Router), tokenAmount);
        IERC20(BUSD).approve(address(uniswapV2Router), BUSDAmount);

        // add the liquidity
        uniswapV2Router.addLiquidity(
            BUSD,
            LOP,
            BUSDAmount,
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            owner(),
            block.timestamp
        );
    }

    function executeSwap(uint256 liquidityTokens, uint256 forMarketing, uint256 forLiquidity) public{
        require(msg.sender == owner() || msg.sender == LOP, "Only owner or LOP ca can execute this.");
        if(liquidityTokens > 0 && forLiquidity > 0){
            addLiquidity(liquidityTokens, forLiquidity);
        }
        IERC20(BUSD).transfer(marketingWallet, forMarketing);

    }

    function emergenceRescueToken(address token) public onlyOwner{
        IERC20(token).transfer(owner(), IERC20(token).balanceOf(address(this)));
    }

    //For emergency use in case we need to manually approve some IERC20 token
    function approve(address token, address spender) public onlyOwner{
        IERC20(token).approve(spender, 100000000000000000000000000);
    }

}