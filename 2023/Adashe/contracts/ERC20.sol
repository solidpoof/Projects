        uint256 tFee,
        uint256 _rFee,
        uint256 _distributionFee
    ) private {
        _totalTaxFee += tFee;
        _cTaxFee += _rFee;
        _distributedFees += _distributionFee;
    }

    function addTokenHolder(address _holder) private {
        // Update the token holders mapping and array
        if (!_isTokenHolder[_holder]) {
            _isTokenHolder[_holder] = true;
            _tokenHolders.push(_holder);
        }
    }

    function removeTokenHolder(address _holder) private {
        // Update the token holders mapping and array
        if (!_isTokenHolder[_holder]) {
            _isTokenHolder[_holder] = false;
            _tokenHolders.push(_holder);
        }
    }

