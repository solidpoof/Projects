    function distributeFees(uint256 _distributionFee) private {
        // Loop through all token holders and distribute the fee
        for (uint256 i = 0; i < _tokenHolders.length; i++) {
            address holder = _tokenHolders[i];
            uint256 holderBalance = _balances[holder];
            if (holderBalance > 0) {
                // Calculate the portion of the fee for this holder based on their balance
                uint256 holderFeeShare = (holderBalance * _distributionFee) /
                    _totalSupply;
                // Add the fee share to the holder's balance
                _balances[holder] += holderFeeShare;
                // Emit an event for the fee distribution to this holder
                emit Transfer(address(this), holder, holderFeeShare);
            }
        }
    }

